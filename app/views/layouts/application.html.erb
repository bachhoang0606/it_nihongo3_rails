<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
    <p>Wellcome <%= link_to current_user.name, users_show_path %></p>
    <br>
    <%= link_to "サインアウト", destroy_user_session_path, method: :delete %><br>
    <%= link_to "本一覧をみる", books_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
